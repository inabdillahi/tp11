{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
<h1 class="mt-3">Annonces : </h1>

<div class="row">
    <div class="col-12 col-md-6">
        <img src="{{asset('assets/images/annonces/'~ annonce.image)}}" width="200px" alt="">
    </div>
    <div class="col-12 col-md-6">
        <ul>
            <li>Titre : {{annonce.titre}}</li>
            <li>Description : {{annonce.description}}</li>
            <li>Date de publication : {{annonce.createdAt | date('d/m/Y')}}</li>
            <li>Auteur : {{annonce.utilisateur.username}}</li>
        </ul>
    </div>
</div>
{% endblock %}